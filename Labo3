//Bibliotecas
import java.util.Scanner;
import java.io.File;
import java.io.FileNotFoundException;

public class LecturaArchivo3 {
	
	//Primera parte del programa
	public static void main(String[] args) {
		try {
		metodoUno();
		} catch (Exception exception) {
			System.err.printf(exception.getMessage());
			exception.printStackTrace();
		StackTraceElement[] traceElements = exception.printStackTrace();
		
		
		}
		//Tercera parte usando Thread.dumpStack()
		System.out.print("\nSalida utilizando Thread.dumpStack():");
		Thread.dumpStack();
	}
	
	static void metodoUno (){
		metodoDos();
	}
	
	static void metodoDos (){
		metodoTres();
	}
	
	static void metodoTres (){
		Thread.dumpStack();
		System.out.print("\nSalida utilizando printStackTrace():\n");
		metodoCuatro();
		}
	
	static void metodoCuatro (){
		LeerArchivo();
	}
	//Segunda parte usando printStackTrace();
	static void LeerArchivo (){
		try {
		File archivo = new File ("archivo_intexistete.txt");
		Scanner scanner = new Scanner(archivo);
		
		//Leer los datos del archivo
		while(scanner.hasNextLine()) {
			String data = scanner.nextLine();
			System.out.println(data);
		}
		scanner.close();
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		}
	}	
}
