//Bibliotecas
import java.util.Scanner;
import java.io.File;
import java.io.FileNotFoundException;

public class LecturaArchivo3 {
	
	//Primera parte del programa
	public static void main(String[] args) {
		try {
		metodoUno();
		} catch (Exception exception) {
		/* 	System.err.printf(exception.getMessage());
			exception.printStackTrace();

		StackTraceElement[] traceElements = exception.getStackTrace();

		System.out.println("\n Usando getStackTrace():");

        for(StackTraceElement element : traceElements); {

        System.out.printf("%s\n", "MÃ©todo:" + element.getMethodName());
        System.out.printf("%s\t", "Clase:" + element.getClassName());
        System.out.printf("%s\t", "Linea:" + element.getLineNumber());
